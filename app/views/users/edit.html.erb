<%= form_with(model: @user, user_pathlocal: true) do |f| %>
<div class="field">
  <%= f.label :image %>
   <%= image_tag @user.img.url if @user.img && @user.img.url %>
   <%= f.file_field :img %>
   <%= f.hidden_field :img_cache %>
   <%= f.label :name %>
   <%= f.text_field :name %>
   <%= f.label :email %>
   <%= f.email_field :email %>
   <%= f.label :password %>
   <%= f.password_field :password %>
   <%= f.label :password_confirmation %>
   <%= f.password_field :password_confirmation %>
   <%= f.submit "プロフィール編集完了" %>
<%end%>
