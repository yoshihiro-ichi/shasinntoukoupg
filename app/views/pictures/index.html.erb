<h1>投稿一覧</h1>
<table>
  <tr>
    <th>投稿写真</th>
    <th>タイトル</th>
    <th>コンテンツ</th>
  </tr>
  <% @pictures.each do |picture| %>
  <tr>
<td><%= image_tag(picture.img.url) if picture.img && picture.img.url %></td>
    <td><%= picture.title %></td>
    <td><%= picture.content %></td>
    <td><%= link_to '詳細を確認する', picture_path(picture.id) %></td>
    <td><%= link_to "編集する", edit_picture_path(picture.id),data:{ confirm: '本当に編集していいですか？' } %></td>
    <td><%= link_to '削除する', picture_path(picture.id), method: :delete,data:{ confirm: '本当に削除していいですか？' } %></td>
    <td><%= picture.user.name %></td>
  </tr>
  <% end %>
</table>

<p><%= link_to '新規投稿', new_picture_path %></p>
